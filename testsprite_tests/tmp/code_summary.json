      "name": "User Authentication",
      "description": "JWT-based authentication system with role-based access control (admin/user)",
      "files": [
        "hermitik-desktopgg/backend/routes/auth.js",
        "hermitik-desktopgg/backend/middleware/auth.js",
        "hermitik-desktopgg/backend/models/User.js",
        "hermitik-desktopgg/frontend1/src/contexts/AuthContext.tsx",
        "hermitik-desktopgg/frontend1/src/pages/Login.tsx",
        "hermitik-desktopgg/frontend1/src/pages/Signup.tsx"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Authentication API",
          "version": "1.0.0"
        },
        "paths": {
          "/api/auth/admin-signup": {
            "post": {
              "summary": "Create admin user",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "name": {"type": "string"},
                        "email": {"type": "string"},
                        "password": {"type": "string"}
                      }
                    }
                  }
                }
              }
            }
          },
          "/api/auth/login": {
            "post": {
              "summary": "User login",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "email": {"type": "string"},
                        "password": {"type": "string"}
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
