# Production Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Frontend URL (Update with your production domain)
FRONTEND_URL=https://your-production-domain.com

# Database Configuration
MONGO_URI=mongodb://localhost:27017/hermetik_production
# For MongoDB Atlas (recommended for production):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/hermetik_production?retryWrites=true&w=majority

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=24h

# API Keys
DEBANK_API_KEY=your-debank-api-key
COINGECKO_API_KEY=your-coingecko-api-key

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10
API_RATE_LIMIT_MAX=20

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILE_SIZE=5242880
LOG_MAX_FILES=5

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true

# Performance Configuration
ENABLE_CACHING=true
ENABLE_PERFORMANCE_MONITORING=true

# Database Connection Pool
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5
DB_MAX_IDLE_TIME_MS=30000
DB_SERVER_SELECTION_TIMEOUT_MS=5000

# External API Timeouts
DEBANK_TIMEOUT=10000
COINGECKO_TIMEOUT=10000
HTTP_CLIENT_RETRY_ATTEMPTS=3

# Admin Configuration
ADMIN_EMAIL=admin@hermetik.com
ENABLE_ADMIN_ENDPOINTS=true

# Monitoring & Alerting
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=
SSL_KEY_PATH=

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_REQUEST_SIZE=10485760

# Background Jobs
ENABLE_CRON_JOBS=true
SNAPSHOT_CRON_SCHEDULE=0 2 * * *

# Error Tracking (Optional - for services like Sentry)
SENTRY_DSN=
ERROR_TRACKING_ENABLED=false

# Performance Monitoring (Optional - for services like New Relic)
NEW_RELIC_LICENSE_KEY=
APM_ENABLED=false

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@hermetik.com

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 1 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
FEATURE_ANALYTICS_ENABLED=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_EXPORT_DATA=true
